<!-- Media List -->
<ul class="media-list">
	<li class="media">
	{{# mediaLeft }}
    <div class="media-left">
    	<a href="{{ url }}">
        	<img class="media-object" src="{{ mediaImage }}" alt="{{ alt }}">
      	</a>
    </div>
    {{/ mediaLeft }}
    <div class="media-body">
    	<h4 class="media-heading">{{ heading }}</h4>
		<p>{{ text }}</p>
		<!-- Nested media object -->
		<div class="media">
        	<div class="media-left">
				<a href="{{ url }}">
					<img class="media-object" src="{{ mediaImage }}" alt="{{ alt }}">
          		</a>
        	</div>
			<div class="media-body">
				<h4 class="media-heading">{{ heading }}</h4>
				{{ text }}
				<!-- Nested media object -->
				{{> molecules-media}}
        	</div>
      	</div>
	  	<!-- Nested media object -->
	  	{{> molecules-media }}
    </div>
    {{# mediaRight }}
    <div class="media-right">
    	<a href="{{ url }}">
        	<img class="media-object" src="{{ mediaImage }}" alt="{{ alt }}">
      	</a>
    </div>
    {{/ mediaRight }}
	</li>
</ul>
